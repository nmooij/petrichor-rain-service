{% extends "base.xml" %}
{% block content %}

<form id="input_form">
{# Here the minimum and maximum number of digits to be entered are defined. The result is saved in a variable. #}
  <field name="DTMF_input" type="digits?minlength=1;maxlength=5">
    <prompt>
    <audio src="{{ voice_label }}"/>
    </prompt>

    <filled>
    {# saves the input to a variable with the name given, to be submitted later #}
    <assign name="input" expr="DTMF_input"/>
    
    {# forward the user to the given goto form #}
      <submit src=" {{redirect_url}}" namelist="DTMF_input" method="post"/> 
    </filled>
  </field>
</form>

{% endblock %}
